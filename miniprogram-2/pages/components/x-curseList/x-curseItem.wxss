.curseList {
  height: 80px;
  width: 100%;
  background-color: #CFCFCF;
  border-bottom: 1px solid black;
}
.curseList image {
  float: left;
  display: block;
  height: 100%;
  width: 80px;
}
.curseList .curseTitle {
  display: block;
  font-size: 15px;
  margin-left: 102px;
  padding-top: 4px;
}
.curseList .curseContent {
  white-space: nowrap;
  text-overflow: ellipsis;
  overflow-x: hidden;
  display: block;
  font-size: 12px;
  margin-left: 102px;
  margin-top: 12px;
}
.curseList .curseItem {
  display: block;
  font-size: 8px;
  margin-left: 102px;
  margin-top: 12px;
}